<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Dev builds: no sandbox so permissions work with ad-hoc signing -->

    <!-- Microphone — user grants via System Settings > Privacy > Microphone -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Network access — required for WhisperKit model downloads -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
